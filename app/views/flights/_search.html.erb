<%= form_with url:'/flights', method: :get do |form| %>
    <%= form.label :origin %>
    <%= form.select :origin, @origins.collect { |port| [ port.name, port.code ] }, { include_blank: 'Select Airport', selected: params[:origin] }, { required: true } %>
    <%= form.label :destination %>
    <%= form.select :destination, @destinations.collect { |port| [ port.name, port.code ] }, { include_blank: 'Select Airport', selected: params[:destination] }, { required: true } %>
    <%= form.label :passengers %>
    <%= form.select :passengers, (1..4).to_a %>
    <%= form.label :departure_date %>
    <%= form.select :departure_date, @depart_dates.map { |time| [time.strftime('%F'), time] }, { selected: params[:departure_date] } %>

    <%= form.submit "Search" %>
<% end %>